// Product entity for persistence testing

@entity(storage: "main_db")
struct Product {
    id: i64,
    name: string,
    price: f64,
    in_stock: bool
}

@entity(storage: "main_db")
struct Order {
    id: i64,
    product_id: i64,
    quantity: i32,
    total: f64
}

export fn create_product(name: string, price: f64) -> Product {
    let product = Product { name: name, price: price, in_stock: true };
    return product;
}
