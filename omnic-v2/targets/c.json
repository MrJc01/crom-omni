{
  "name": "c",
  "extension": ".c",
  "header_extension": ".h",
  "comment_single": "//",
  "comment_multi_start": "/*",
  "comment_multi_end": "*/",
  "indent": "    ",
  "statement_end": ";",
  "block_start": "{",
  "block_end": "}",
  
  "templates": {
    "program_header": "// Generated by Omni Compiler\n#include <stdio.h>\n#include <stdlib.h>\n#include <string.h>\n#include <stdbool.h>\n\n",
    "program_footer": "",
    
    "fn_decl": "{return_type} {name}({params}) {{\n{body}\n}}",
    "fn_proto": "{return_type} {name}({params});",
    "main_fn": "int main(int argc, char* argv[]) {{\n{body}\n    return 0;\n}}",
    
    "let_decl": "{type} {name} = {value};",
    "const_decl": "const {type} {name} = {value};",
    "static_decl": "static {type} {name} = {value};",
    "ptr_decl": "{type}* {name} = {value};",
    
    "if_stmt": "if ({condition}) {{\n{consequence}\n}}",
    "if_else_stmt": "if ({condition}) {{\n{consequence}\n}} else {{\n{alternative}\n}}",
    "while_stmt": "while ({condition}) {{\n{body}\n}}",
    "for_stmt": "for ({init}; {condition}; {update}) {{\n{body}\n}}",
    "do_while": "do {{\n{body}\n}} while ({condition});",
    "switch_stmt": "switch ({expr}) {{\n{cases}\n}}",
    "case_stmt": "case {value}:\n{body}\nbreak;",
    "default_case": "default:\n{body}\nbreak;",
    
    "return_stmt": "return {value};",
    "return_void": "return;",
    
    "struct_decl": "typedef struct {{\n{fields}\n}} {name};",
    "struct_field": "{type} {name};",
    "struct_init": "({type}){{ {fields} }}",
    "struct_access": "{struct}.{field}",
    "struct_ptr_access": "{struct}->{field}",
    
    "call_expr": "{callee}({args})",
    "member_access": "{object}.{member}",
    "ptr_member": "{object}->{member}",
    "index_access": "{object}[{index}]",
    "address_of": "&{expr}",
    "dereference": "*{expr}",
    
    "binary_expr": "({left} {op} {right})",
    "unary_expr": "{op}{operand}",
    "ternary_expr": "({condition} ? {then} : {else})",
    "assignment": "{left} = {right};",
    "cast_expr": "({type}){expr}",
    
    "array_decl": "{type} {name}[{size}];",
    "array_init": "{type} {name}[] = {{{elements}}};",
    "array_literal": "{{{elements}}}",
    
    "string_literal": "\"{value}\"",
    "char_literal": "'{value}'",
    "number_literal": "{value}",
    "float_literal": "{value}f",
    "bool_true": "true",
    "bool_false": "false",
    "null": "NULL",
    
    "include_system": "#include <{header}>",
    "include_local": "#include \"{header}\"",
    "define": "#define {name} {value}",
    "ifdef": "#ifdef {name}",
    "ifndef": "#ifndef {name}",
    "endif": "#endif",
    
    "comment": "// {text}",
    "comment_multi": "/* {text} */",
    
    "malloc": "({type}*)malloc(sizeof({type}) * {count})",
    "free": "free({ptr});",
    "sizeof": "sizeof({type})",
    
    "printf": "printf({format}, {args});",
    "sprintf": "sprintf({buffer}, {format}, {args});"
  },
  
  "type_map": {
    "i8": "int8_t",
    "i16": "int16_t",
    "i32": "int32_t",
    "i64": "int64_t",
    "u8": "uint8_t",
    "u16": "uint16_t",
    "u32": "uint32_t",
    "u64": "uint64_t",
    "f32": "float",
    "f64": "double",
    "string": "char*",
    "bool": "bool",
    "void": "void",
    "any": "void*"
  },
  
  "operators": {
    "add": "+",
    "sub": "-",
    "mul": "*",
    "div": "/",
    "mod": "%",
    "eq": "==",
    "neq": "!=",
    "lt": "<",
    "lte": "<=",
    "gt": ">",
    "gte": ">=",
    "and": "&&",
    "or": "||",
    "not": "!",
    "bitand": "&",
    "bitor": "|",
    "bitxor": "^",
    "bitnot": "~",
    "shl": "<<",
    "shr": ">>"
  }
}
