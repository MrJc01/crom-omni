{
  "name": "javascript",
  "extension": ".js",
  "comment_single": "//",
  "comment_multi_start": "/*",
  "comment_multi_end": "*/",
  "indent": "    ",
  "statement_end": ";",
  "block_start": "{",
  "block_end": "}",

  "templates": {
    "program_header": "// Generated by Omni Compiler\n'use strict';\n\n",
    "program_footer": "",

    "fn_decl": "function {name}({params}) {\n{body}\n}",
    "fn_decl_async": "async function {name}({params}) {\n{body}\n}",
    "fn_arrow": "({params}) => {\n{body}\n}",
    "fn_arrow_expr": "({params}) => {expr}",

    "let_decl": "let {name} = {value};",
    "const_decl": "const {name} = {value};",
    "var_decl": "var {name} = {value};",

    "if_stmt": "if ({condition}) {\n{consequence}\n}",
    "if_else_stmt": "if ({condition}) {\n{consequence}\n} else {\n{alternative}\n}",
    "while_stmt": "while ({condition}) {\n{body}\n}",
    "for_stmt": "for ({init}; {condition}; {update}) {\n{body}\n}",
    "for_of_stmt": "for (const {item} of {iterable}) {\n{body}\n}",

    "return_stmt": "return {value};",
    "return_void": "return;",

    "class_decl": "class {name} {\n{body}\n}",
    "class_extends": "class {name} extends {parent} {\n{body}\n}",
    "constructor": "constructor({params}) {\n{body}\n}",
    "method_decl": "{name}({params}) {\n{body}\n}",
    "method_async": "async {name}({params}) {\n{body}\n}",
    "field_assign": "this.{name} = {value};",
    "static_method": "static {name}({params}) {\n{body}\n}",

    "call_expr": "{callee}({args})",
    "method_call": "{object}.{method}({args})",
    "member_access": "{object}.{member}",
    "index_access": "{object}[{index}]",
    "new_expr": "new {class}({args})",
    "object_init": "new {class}({ {fields} })",

    "binary_expr": "{left} {op} {right}",
    "unary_expr": "{op}{operand}",
    "ternary_expr": "{condition} ? {then} : {else}",
    "assignment": "{left} = {right}",

    "array_literal": "[{elements}]",
    "object_literal": "{ {pairs} }",
    "object_pair": "{key}: {value}",

    "string_literal": "\"{value}\"",
    "string_template": "`{value}`",
    "number_literal": "{value}",
    "bool_true": "true",
    "bool_false": "false",
    "null": "null",
    "undefined": "undefined",

    "import_stmt": "const {alias} = require(\"{module}\");",
    "import_es6": "import {imports} from \"{module}\";",
    "export_stmt": "module.exports = { {exports} };",
    "export_es6": "export { {exports} };",
    "export_default": "module.exports = {value};",

    "comment": "// {text}",
    "comment_multi": "/* {text} */",

    "try_catch": "try {\n{try_block}\n} catch ({error}) {\n{catch_block}\n}",
    "throw_stmt": "throw {value};",

    "await_expr": "await {expr}",
    "promise_then": "{promise}.then({callback})",

    "spread": "...{expr}",
    "rest_params": "...{name}"
  },

  "type_map": {
    "i8": "number",
    "i16": "number",
    "i32": "number",
    "i64": "number",
    "u8": "number",
    "u16": "number",
    "u32": "number",
    "u64": "number",
    "f32": "number",
    "f64": "number",
    "string": "string",
    "bool": "boolean",
    "void": "void",
    "any": "any"
  },

  "operators": {
    "add": "+",
    "sub": "-",
    "mul": "*",
    "div": "/",
    "mod": "%",
    "eq": "===",
    "neq": "!==",
    "lt": "<",
    "lte": "<=",
    "gt": ">",
    "gte": ">=",
    "and": "&&",
    "or": "||",
    "not": "!",
    "bitand": "&",
    "bitor": "|",
    "bitxor": "^",
    "bitnot": "~",
    "shl": "<<",
    "shr": ">>"
  }
}
