{
  "name": "rust",
  "extension": ".rs",
  "comment_single": "//",
  "comment_multi_start": "/*",
  "comment_multi_end": "*/",
  "indent": "    ",
  "statement_end": ";",
  "block_start": "{",
  "block_end": "}",
  
  "templates": {
    "program_header": "// Generated by Omni Compiler\n\n",
    "program_footer": "",
    
    "fn_decl": "fn {name}({params}) {{\n{body}\n}}",
    "fn_decl_return": "fn {name}({params}) -> {return_type} {{\n{body}\n}}",
    "fn_pub": "pub fn {name}({params}) {{\n{body}\n}}",
    "fn_async": "async fn {name}({params}) {{\n{body}\n}}",
    
    "let_decl": "let {name} = {value};",
    "let_mut": "let mut {name} = {value};",
    "const_decl": "const {name}: {type} = {value};",
    
    "if_stmt": "if {condition} {{\n{consequence}\n}}",
    "if_else_stmt": "if {condition} {{\n{consequence}\n}} else {{\n{alternative}\n}}",
    "while_stmt": "while {condition} {{\n{body}\n}}",
    "loop_stmt": "loop {{\n{body}\n}}",
    "for_stmt": "for {item} in {iterable} {{\n{body}\n}}",
    "match_stmt": "match {expr} {{\n{arms}\n}}",
    "match_arm": "{pattern} => {body},",
    
    "return_stmt": "return {value};",
    "return_implicit": "{value}",
    
    "struct_decl": "struct {name} {{\n{fields}\n}}",
    "struct_field": "{name}: {type},",
    "impl_block": "impl {name} {{\n{body}\n}}",
    "method_decl": "fn {name}(&self, {params}) {{\n{body}\n}}",
    "method_mut": "fn {name}(&mut self, {params}) {{\n{body}\n}}",
    "new_method": "pub fn new({params}) -> Self {{\n{body}\n}}",
    
    "call_expr": "{callee}({args})",
    "method_call": "{object}.{method}({args})",
    "member_access": "{object}.{member}",
    "index_access": "{object}[{index}]",
    "new_expr": "{struct}::new({args})",
    "struct_init": "{struct} {{ {fields} }}",
    
    "binary_expr": "{left} {op} {right}",
    "unary_expr": "{op}{operand}",
    "reference": "&{expr}",
    "deref": "*{expr}",
    "mutable_ref": "&mut {expr}",
    
    "vec_literal": "vec![{elements}]",
    "array_literal": "[{elements}]",
    "tuple_literal": "({elements})",
    
    "string_literal": "\"{value}\"",
    "char_literal": "'{value}'",
    "number_literal": "{value}",
    "bool_true": "true",
    "bool_false": "false",
    "null": "None",
    "some": "Some({value})",
    
    "use_stmt": "use {path};",
    "use_as": "use {path} as {alias};",
    "mod_decl": "mod {name};",
    "pub_mod": "pub mod {name};",
    
    "comment": "// {text}",
    "doc_comment": "/// {text}",
    
    "result_ok": "Ok({value})",
    "result_err": "Err({value})",
    "try_expr": "{expr}?",
    
    "clone": "{expr}.clone()",
    "to_string": "{expr}.to_string()",
    "unwrap": "{expr}.unwrap()",
    "expect": "{expr}.expect(\"{msg}\")"
  },
  
  "type_map": {
    "i8": "i8",
    "i16": "i16",
    "i32": "i32",
    "i64": "i64",
    "u8": "u8",
    "u16": "u16",
    "u32": "u32",
    "u64": "u64",
    "f32": "f32",
    "f64": "f64",
    "string": "String",
    "bool": "bool",
    "void": "()",
    "any": "Box<dyn Any>"
  },
  
  "operators": {
    "add": "+",
    "sub": "-",
    "mul": "*",
    "div": "/",
    "mod": "%",
    "eq": "==",
    "neq": "!=",
    "lt": "<",
    "lte": "<=",
    "gt": ">",
    "gte": ">=",
    "and": "&&",
    "or": "||",
    "not": "!",
    "bitand": "&",
    "bitor": "|",
    "bitxor": "^",
    "bitnot": "!",
    "shl": "<<",
    "shr": ">>"
  }
}
